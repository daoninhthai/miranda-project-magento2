<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <buynow>
            <general>
                <keep_cart_products>0</keep_cart_products>
                <restore_cart_products>1</restore_cart_products>
                <hide_add_to_cart>0</hide_add_to_cart>
                <enable_list>1</enable_list>
                <enable_view>1</enable_view>
                <enable_search>1</enable_search>
                <enable_advanced_search>1</enable_advanced_search>
                <enable_related>1</enable_related>
                <enable_upsell>1</enable_upsell>
                <enable_crosssell>1</enable_crosssell>
                <enable_compare>1</enable_compare>
                <enable_wishlist>1</enable_wishlist>
                <addtocart_id>product_addtocart_form</addtocart_id>
                <button_title>Buy Now</button_title>
            </general>
        </buynow>
    </default>
</config>
