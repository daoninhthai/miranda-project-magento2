<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Store/etc/config.xsd">
    <default>
        <payment>
            <paypaladaptive>
                <active>1</active>
                <title>Paypal Adaptive Payment</title>
                <order_status>pending_payment</order_status>
                <payment_mode>sandbox</payment_mode>
                <payment_type>parallel</payment_type>
                <who_will_pay_fee>SENDER</who_will_pay_fee>
                <merchant_paypal_id></merchant_paypal_id>
                <paypal_application_id></paypal_application_id>
                <paypal_api_user_name></paypal_api_user_name>
                <paypal_api_password backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <paypal_api_signature backend_model="Magento\Config\Model\Config\Backend\Encrypted"/>
                <allowed_carrier></allowed_carrier>
                <allowspecific></allowspecific>
                <specificcountry></specificcountry>
                <instructions>Pay via paypal webstie</instructions>
                <sort_order>1</sort_order>
                <model>Magetop\PaypalAdaptive\Model\PaypalAdaptive</model>
                <payment_action>true</payment_action>                             
            </paypaladaptive>
        </payment>
    </default>
</config>